<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings"
        android:id="@+id/frag_root">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/settings_activity_title"
                android:background="#00a2f1"
                android:theme="?attr/actionBarTheme"
                android:id="@+id/toolbar2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/settings_button_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button3" android:textAllCaps="true"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:background="@android:color/background_light"
                android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/settings_button_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button2" android:textAllCaps="true"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:background="@android:color/background_light"
                android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/settings_button_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button1" android:textAllCaps="true"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:background="@android:color/background_light"
                app:layout_constraintTop_toBottomOf="@+id/toolbar2" app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>